@model OrderListViewModel

<h1>All orders</h1>

<form method="get">
    <div>
        <label>Phone: </label>
        <input name="phone" value="@Model.Phone" asp-for="Phone" />
        <label>Status: </label>
        <select name="status" asp-items="Model.Statuses" asp-for="CurrentStatus"></select>
        <input type="submit" value="Filter" />
    </div>
</form>

<br />

@foreach (var order in Model.Orders)
{
    <div style="width: 800px; display: flex; justify-content: space-between">
        <div>@order.Number</div>
        <div>@order.Creation</div>
        <div>@order.Status</div>
        <div>@order.Name</div>
        <div>@order.Phone</div>
        <div>@order.InPlace</div>
        <div>@order.Address</div>
        <div>@order.PromoCode</div>
        <div>@order.TotalPrice</div>
        <div>@order.Comment</div>
        <div>
            <a asp-controller="Order" asp-action="Edit" asp-route-id="@order.Id">Edit</a>
        </div>
    </div>
}
