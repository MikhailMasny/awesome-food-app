    </div>*@
    <div class="indent__margin-bottom">
        <input class="input" asp-for="PaymentType" placeholder="PaymentType" type="number" />
        <span asp-validation-for="PaymentType"></span>
    </div>
    <div class="indent__margin-bottom">
        <input class="input" asp-for="Comment" placeholder="Comment" type="text" />
        <span asp-validation-for="Comment"></span>
    </div>
    <div class="indent__margin-bottom">
        <button class="button" type="submit">Login</button>
    </div>
