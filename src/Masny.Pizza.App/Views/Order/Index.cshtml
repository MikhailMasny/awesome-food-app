@model Masny.Pizza.App.Controllers.SimpleTestClass

<h1>Order page - some details</h1>

<form method="post" asp-controller="Order" asp-action="Index">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="indent__margin-bottom">
        <input class="input" asp-for="OrderType" placeholder="OrderType" type="number" />
        <span asp-validation-for="OrderType"></span>
    </div>
    <div class="indent__margin-bottom">
        <input class="input" asp-for="Address" placeholder="Address" type="text" />
        <span asp-validation-for="Address"></span>
    </div>
    @*<div class="indent__margin-bottom">
        <input class="input" asp-for="Time" placeholder="Time" type="datetime" />
